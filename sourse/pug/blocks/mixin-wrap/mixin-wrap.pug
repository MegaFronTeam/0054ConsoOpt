mixin totalPrice(btn)
	+b.total-price
		+e.wrap
			+e.item
				+e.text Скидка на заказ
				+e.dash
				+e.price 5%
			.text-secondary Чтобы получить скидку 10% дополните заказ на 19 990 ₽
		+e.item
			+e.text Стоимость доставки
			+e.dash
			+e.price 0 ₽
		+e.item
			+e.text Итого со скидкой
			+e.dash
			+e.price 132 905 ₽
		+e.btn.btn.btn-primary(href='#')= btn


