mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider


mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")

mixin sizeblock(size)
	+b.sizeBlock
		+e.item= size
		+addblock
		+e.item 13 990 ₽

mixin search()
	+b.search-block--main
		form
			input(type="text" placeholder="Поиск..." inputmode='search')
			button 
				+icon("search")

mixin search2()
	+b.search-block--big
		form
			input(type="text" placeholder="Поиск" inputmode='search')
			button 
				+icon("arrow-big")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)
			//- h1= t

mixin page-head2(t, ...items)
	+b.page-head
		- let l = items.length
		.container
			.back
				a(href='#')
					+icon('arrow-back')
					| Назад
			+breadcrumb('Главная',...items)

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin productCard(i, title, havePrice, newP, oldP, btn)
	+b.product-card
		+e.slider--js
			+icon('heart')
			.swiper-wrapper
				.swiper-slide
					+e.img-wrap
						+img(`img/product-${i}.png`)
				.swiper-slide
					+e.img-wrap
						+img(`img/product-${i+1}.png`)
				.swiper-slide
					+e.img-wrap
						+img(`img/product-${i+3}.png`)
			.swiper-pagination
		+e.wrapper.text-center
			+e.item.title= title
			if !havePrice
				+e.item.descr SM 240110
			if !havePrice
				+e.item.colors
					a.span(href='#', style='background-color:#F6F1D9;')
					a.span(href='#', style='background-color:#A3985A;')
					a.span(href='#', style='background-color:#E6BBC1;')
			if havePrice
				+e.item.have-price= newP 
					if oldP
						span #{ oldP}
				+e.item.colors
					a.span(href='#', style='background-color:#F6F1D9;')
					a.span(href='#', style='background-color:#A3985A;')
					a.span(href='#', style='background-color:#E6BBC1;')
			if !havePrice
				+e.item.price Показать цену
			if btn
				+e.btn.btn.btn-primary(href='#')= btn

mixin productCard2(i, title)
	+b.product-card-item(href='#')
		+e.img-wrap
			+img(`img/product-${i}.png`)
		h5= title

