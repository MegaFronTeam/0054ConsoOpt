mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		+e.slider--js
			.swiper-wrapper
				.swiper-slide.bg-wrap
					+e.img-wrap()
						+img('img/sHeaderBlock.png').img
					a.section-title(href='#' data-swiper-parallax="-30%" data-swiper-parallax-opacity="0"): .slide-title Новая коллекция
				.swiper-slide.bg-wrap
					+e.img-wrap()
						+img('img/sHeaderBlock-b.png').img
					a.section-title(href='#' data-swiper-parallax="-30%" data-swiper-parallax-opacity="0"): .slide-title Новая коллекция
				.swiper-slide.bg-wrap
					+e.img-wrap()
						+img('img/sHeaderBlock.png').img
					a.section-title(href='#' data-swiper-parallax="-30%" data-swiper-parallax-opacity="0"): .slide-title Новая коллекция
				.swiper-slide.bg-wrap
					+e.img-wrap()
						+img('img/sHeaderBlock-b.png').img
					a.section-title(href='#' data-swiper-parallax="-30%" data-swiper-parallax-opacity="0"): .slide-title Новая коллекция 
			.swiper-pagination

	// end headerBlock

mixin imgBlock()
	// start headerBlock
	+b.imgBlock.section#imgBlock&attributes(attributes)
		+e.img-wrap: +img('img/sHeaderBlock-b.png').img
		.container
			+b.section-title.text-center
				h3 11.11 — день шоппинга
	// end headerBlock