mixin filterGroupSizes
	.filters-group.filters-group_wide
		.filters
			+b.filter--js
				+e.title 40 RUS (38 IT)
					+icon('arrow-top')
					+e.wrap
						+e.item-wrap
							+e.item 40 RUS (38 IT)
							+addblock
						+e.item-wrap.disabled
							+e.item 42 RUS (40 IT)
							+e.info Подписка
						+e.item-wrap
							+e.item 44 RUS (42 IT)
							+addblock
						+e.item-wrap
							+e.item 46 RUS (44 IT)
							+addblock
						+e.item-wrap
							+e.item 48 RUS (46 IT)
							+addblock
						+e.item-wrap
							+e.item 50 RUS (48 IT)
							+addblock


mixin sProdCardSlide(imgNum)
	.swiper-slide
		+e.s-img(href=`img/product-${imgNum}.png` data-fancybox='sProdCardSlide')
			img(loading="lazy" src=`img/product-${imgNum}.png` alt="")

mixin sProdCardThumb(imgNum)
	.swiper-slide
		.slide-item-1
			img(loading="lazy" src=`img/product-${imgNum}.png` alt="")

