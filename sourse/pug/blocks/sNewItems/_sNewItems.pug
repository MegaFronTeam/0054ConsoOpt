mixin filterGroup2
	.filters-group
		.filters-wrap.filter-nav
			+e.title.title_big ИЗБРАННОЕ
			.d-lg-none: +icon('filter')
		.filters-wrap.filters-wrap--js
			.d-lg-none: +profileNav

mixin filterGroup(title)
	.filters-group
		.filters-wrap.filter-nav.d-lg-none
			+e.title= title
			+icon('filter')
		.filters-wrap.filters-wrap--js
			.filters
				+b.filter--js
					+e.title Цвет
						+icon('arrow-top')
						+e.wrap
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый Зеленый')
							+in-c("checkbox", 'Красный')(checked)
				+b.filter--js
					+e.title Размер
						+icon('arrow-top')
						+e.wrap
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
				+b.filter--js
					+e.title Цена
						+icon('arrow-top')
						+e.wrap
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
			+input("Сортировать",'select','')

