mixin sNewItems(data)
	// start sNewItems
	+b.SECTION.sNewItems.section#sNewItems&attributes(attributes)
		.container
			+e.row.row
				+e.col-aside.col-md-3.d-none.d-md-block
					+e.title Новинки / SALE
					ul.nav-aside
						li: a(href='#') Все
						li.active: a(href='#') Верхняя одежда
						li: a(href='#') Трикотаж
						li: a(href='#') Аксессуары
				.col-md-9
					+filterGroup
					+e.items-content.row
						.col-6.col-md-4
							+productCard(1, 'Юбка карандаш', true, '4 990 ₽', '13 990 ₽')
						.col-6.col-md-4
							+productCard(2, 'Брюки палаццо', true, '4 990 ₽', '13 990 ₽')
						.col-6.col-md-4
							+productCard(1, 'Юбка карандаш', true, '4 990 ₽', '13 990 ₽')
						.col-6.col-md-4
							+productCard(2, 'Брюки палаццо', true, '4 990 ₽', '13 990 ₽')
						.col-6.col-md-4
							+productCard(1, 'Юбка карандаш', true, '4 990 ₽', '')
					+bottomPagination
	// end sNewItems

