mixin filterGroup2
	.filters-group
		.filters-wrap.filter-nav
			+e.title.title_big ИЗБРАННОЕ
			.d-md-none: +icon('filter')
		.filters-wrap.filters-wrap--js
			.d-md-none: +profileNav

mixin filterGroup
	.filters-group
		.filters-wrap.filter-nav.d-md-none
			+e.title Новинки / SALE
			+icon('filter')
		.filters-wrap.filters-wrap--js
			.filters
				+b.filter--js
					+e.title Цвет
						+icon('arrow-top')
						+e.wrap
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый Зеленый')
							+in-c("checkbox", 'Красный')(checked)
				+b.filter--js
					+e.title Размер
						+icon('arrow-top')
						+e.wrap
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
				+b.filter--js
					+e.title Цена
						+icon('arrow-top')
						+e.wrap
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
							+in-c("checkbox", 'Зеленый')
							+in-c("checkbox", 'Красный')
			+input("Сортировать",'select','')

